<p id="notice"><%= notice %></p>

<p id="right">
  <strong>物件名:</strong>
  <%= @rent.name %>
</p>

<p id="right">
  <strong>賃料:</strong>
  <%= @rent.price %>円
</p>

<p id="right">
  <strong>住所:</strong>
  <%= @rent.address %>
</p>

<p id="right">
  <strong>築年数:</strong>
  <%= @rent.age %>年
</p>

<p id="right">
  <strong>備考:</strong>
  <%= @rent.other %>
</p>

<hr>

<% @rent.stations.each.with_index do |s, index| %>
  <h3>最寄り駅<%= index += 1 %></h3>
  <p id="right">
    <strong>路線名:</strong>
    <%= s.line %>
  </p>

  <p id="right">
    <strong>駅名:</strong>
    <%= s.name %>
  </p>

  <p id="right">
    <strong>徒歩分数:</strong>
    <%= s.time %>分
  </p>
<% end %>

<%= link_to '編集', edit_rent_path(@rent) %> |
<%= link_to '戻る', root_path %>
