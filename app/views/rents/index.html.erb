<p id="notice"><%= notice %></p>

<h1>物件一覧</h1>

<table>
  <thead>
    <tr>
      <th>物件名</th>
      <th>賃料</th>
      <th>住所</th>
      <th>築年数</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rents.each do |rent| %>
      <tr>
        <td><%= rent.name %></td>
        <td><%= rent.price %>円</td>
        <td><%= rent.address %></td>
        <td><%= rent.age %>年</td>
        <td><%= rent.other %></td>
        <td><%= link_to '詳細', rent %></td>
        <td><%= link_to '編集', edit_rent_path(rent) %></td>
        <td><%= link_to '削除', rent, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '物件を登録する', new_rent_path %>
