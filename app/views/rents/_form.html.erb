<%= form_with(model: rent, local: true) do |form| %>
  <% if rent.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(rent.errors.count, "error") %> prohibited this rent from being saved:</h2>

      <ul>
      <% rent.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div class="field">
    <%= form.label :other %>
    <%= form.text_area :other %>
  </div>

  <hr>

  <%= form.fields_for :stations, @rent.stations do |s| %>
    <h3>最寄り駅<%= 1 + s.index.to_i %></h3>
    <div class="field">
      <%= s.label :line %>
      <%= s.text_field :line %>
    </div>

    <div class="field">
      <%= s.label :name %>
      <%= s.text_field :name %>
    </div>

    <div class="field">
      <%= s.label :time %>
      <%= s.number_field :time %>
    </div>
  <% end %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
